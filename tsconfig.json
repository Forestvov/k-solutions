{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "layouts/*": ["layouts/*"],
      "api/*": ["api/*"],
      "types/*": ["types/*"],
      "context/*": ["context/*"],
      "components/*": ["components/*"],
      "assets/*": ["assets/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "/*": ["./*", "./public/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/global.d.ts", "**/*.ts", "**/*.tsx", "src/**/*"]
}
